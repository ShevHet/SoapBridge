{
  "name": "icutech-test-api-frontend",
  "version": "1.0.0",
  "description": "Frontend build scripts for Icutech Test API",
  "scripts": {
    "build": "node build.js",
    "minify:css": "node -e \"const fs=require('fs');const css=fs.readFileSync('styles.css','utf8');fs.writeFileSync('styles.min.css',css.replace(/\\/\\*[\\s\\S]*?\\*\\//g,'').replace(/\\s+/g,' ').replace(/\\s*([{}:;,])\\s*/g,'$1').replace(/;\\s*}/g,'}').trim());\"",
    "minify:js": "node -e \"const fs=require('fs');const js=fs.readFileSync('app.js','utf8');fs.writeFileSync('app.min.js',js.replace(/\\/\\*[\\s\\S]*?\\*\\//g,'').replace(/\\/\\/.*/g,'').replace(/\\s+/g,' ').replace(/\\s*([{}();,=+\\-*/%<>!&|?:])\\s*/g,'$1').trim());\"",
    "build:prod": "npm run minify:css && npm run minify:js && npm run build",
    "test:lighthouse": "lighthouse http://localhost:5030 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless\"",
    "test:pagespeed": "node test-pagespeed.js"
  },
  "keywords": [
    "frontend",
    "build",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "lighthouse": "^12.0.0"
  }
}

