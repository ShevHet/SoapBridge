{
  "name": "icutech-test-frontend",
  "version": "1.0.0",
  "description": "Frontend build scripts for Icutech Test API",
  "scripts": {
    "build:prod": "npm run minify:css && npm run minify:js && npm run build:html",
    "minify:css": "cleancss -o styles.min.css styles.css",
    "minify:js": "terser app.js -o app.min.js --compress --mangle",
    "build:html": "node build-prod.js",
    "clean": "rm -f styles.min.css app.min.js index-prod.html || true"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.26.0"
  },
  "author": "",
  "license": "MIT"
}

